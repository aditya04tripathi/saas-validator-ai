{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"],
      "@/modules/*": ["./modules/*"],
      "@/modules/auth/*": ["./modules/auth/*"],
      "@/modules/validation/*": ["./modules/validation/*"],
      "@/modules/project/*": ["./modules/project/*"],
      "@/modules/payment/*": ["./modules/payment/*"],
      "@/modules/profile/*": ["./modules/profile/*"],
      "@/modules/dashboard/*": ["./modules/dashboard/*"],
      "@/modules/shared/*": ["./modules/shared/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts",
    "**/*.mts"
  ],
  "exclude": ["node_modules"]
}
